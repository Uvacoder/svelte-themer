{
  "name": "svelte-themer",
  "version": "0.4.11",
  "homepage": "https://svelte-themer.now.sh",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/josefaidt/svelte-themer"
  },
  "sideEffects": false,
  "svelte": "./index.js",
  "module": "./lib/index.mjs",
  "main": "./lib/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.mjs",
      "require": "./lib/index.js",
      "./package.json": "./package.json"
    }
  },
  "files": [
    "lib",
    "types",
    "components",
    "index.js",
    "support"
  ],
  "keywords": [
    "svelte",
    "theme",
    "theming"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "yarn build -w",
    "prepublishOnly": "yarn test && yarn build",
    "release": "changeset publish",
    "format": "prettier --write \"{components,support,docs}/**/*.{js,json,svelte}\"",
    "test": "jest components"
  },
  "dependencies": {
    "css-vars-ponyfill": "^2.4.5"
  },
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/preset-env": "^7.14.0",
    "@changesets/cli": "^2.16.0",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/svelte": "^3.0.3",
    "babel-jest": "^26.6.3",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.2.0",
    "rollup": "^2.47.0",
    "rollup-plugin-svelte": "^7.1.0",
    "sveld": "^0.7.1",
    "svelte": "^3.38.2",
    "svelte-jester": "^1.5.0"
  },
  "prettier": {
    "printWidth": 80,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "bracketSpacing": true,
    "htmlWhitespaceSensitivity": "ignore",
    "arrowParens": "avoid",
    "singleQuote": true,
    "svelteSortOrder": "scripts-markup-styles",
    "svelteStrictMode": true,
    "svelteBracketNewLine": true,
    "svelteAllowShorthand": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,svelte,md,mdx,json}": [
      "prettier --write"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "12"
          }
        }
      ]
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.svelte$": "svelte-jester"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests.setup.js"
    ],
    "moduleFileExtensions": [
      "js",
      "svelte"
    ]
  },
  "setupFilesAfterEnv": [
    "@testing-library/jest-dom/extend-expect"
  ]
}
